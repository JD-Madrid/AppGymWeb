@model PlanFormulario

<h2> Crear Plan</h2>

<form asp-action="CrearPlan" method="post">
    <label>Nombre del plan:</label>
    <input asp-for="Nombre" />
    <br />

    <label>Seleccionar actividades:</label>
    <select asp-for="ActividadesSeleccionadas" asp-items="Model.ActividadesDisponibles" multiple class="form-control"></select>
    <br />

    <button type="submit">Guardar</button>
</form>