@model Actividad

<div class="container-modern mt-5">
    <div class="form-modern">

        <h2 class="text-center mb-4">Agregar Actividad</h2>

        <form asp-action="AgregarActividad" method="post">
            <div class="mb-3">
                <label class="form-label">Nombre:</label>
                <input asp-for="Nombre" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">Duración (minutos):</label>
                <input asp-for="Duracion" type="number" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">Precio ($):</label>
                <input asp-for="Precio" type="number" class="form-control" />
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-warning"><b>Agregar</b></button>
            </div>
        </form>

    </div>
</div>
